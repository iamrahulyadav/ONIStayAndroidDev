<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codemaven3015.onistayandroiddev.OTP_Verification"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/otp_linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/otp_editText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="Enter 5 Digit Code"
            android:inputType="phone"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/otp_sendBtn"
            android:layout_width="100dp"

            android:layout_height="wrap_content"
            android:layout_below="@+id/otp_editText"
            android:layout_centerHorizontal="true"
            android:background="#00ffffff"
            android:text="Resend Code"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/smallFont"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/otp_textview"
            android:layout_width="200dp"
            android:layout_height="40dp"

            android:layout_below="@+id/otp_sendBtn"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_bg_color"
            android:gravity="center"
            android:text="@string/sorry"
            android:textAlignment="center"
            android:textColor="@color/red_trans"
            android:textSize="15sp"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/hopInLL"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_below="@+id/otp_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/otp_hopInTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:shadowColor="#000000"
                android:shadowRadius="0.02"
                android:text="HOP IN"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/smiley_icon" />

        </LinearLayout>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>