<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@color/transparent"
        android:text="X"
        android:onClick="onCrossClick"
        android:textColor="@color/red"
        android:textSize="@dimen/ButtonFont" />

    <TextView
        android:id="@+id/textView21"
        android:textColor="@color/red"
        android:textSize="@dimen/largeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cancel Booking" />

    <TextView
        android:id="@+id/textView22"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/dark_green"
        android:textSize="@dimen/smallFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No Cancellation Charges" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layoutDirection="rtl"
            android:text="Booking done by mistake"
            android:textAlignment="textStart"
            android:textSize="@dimen/smallFontL" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layoutDirection="rtl"
            android:text="Want to book different stay"
            android:textAlignment="textStart"
            android:textSize="@dimen/smallFontL" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layoutDirection="rtl"
            android:text="Got a better deal"
            android:textAlignment="textStart"
            android:textSize="@dimen/smallFontL" />

        <RadioButton
            android:id="@+id/radioButton8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layoutDirection="rtl"
            android:text="Other issue"
            android:textAlignment="textStart"
            android:textSize="@dimen/smallFontL" />


    </RadioGroup>

    <Button
        android:id="@+id/cancelButton"
        android:onClick="onCancel"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/red"
        android:text="Cancel This Booking"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/largeFont" />
</LinearLayout>