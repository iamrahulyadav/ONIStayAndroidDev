<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow>

            <TextView
                android:layout_column="1"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dip"
                android:text="Occupancy" />

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:padding="3dip"
                android:text="No.of Beds " />

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:padding="3dip"
                android:text="Price" />
        </TableRow>

        <View
            android:id="@+id/lineSeprator"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#c0c0c0" />

        <TableRow>

            <Button
                android:id="@+id/single"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="3dip"
                android:text="Single/Private >" />

            <TextView
                android:id="@+id/singleBed"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dip"
                android:text="0" />

            <TextView
                android:id="@+id/singlePrice"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dip"
                android:text="0" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/doubleButton"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="3dip"
                android:text="Double >" />

            <TextView
                android:id="@+id/doubleBed"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dip"
                android:text="0" />

            <TextView
                android:id="@+id/doublePrice"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dip"
                android:text="0" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/triple"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="3dip"
                android:text="Triple >" />

            <TextView
                android:id="@+id/tripleBed"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dip"
                android:text="0" />

            <TextView
                android:id="@+id/triplePrice"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dip"
                android:text="0" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/quard"
                android:layout_column="1"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="center"
                android:padding="3dip"
                android:text="Quadruple >" />

            <TextView
                android:id="@+id/quardBed"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dip"
                android:text="0" />

            <TextView
                android:id="@+id/quardPrice"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dip"
                android:text="0" />
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>