<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/food_textView"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="FOOD"
                android:textSize="@dimen/smallFontL"
                android:textStyle="bold"/>
            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/custom_progressbar"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/service_textView"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ONE CLICK SERVICE"
                android:textSize="@dimen/smallFontL"
                android:textStyle="bold"/>
            <ProgressBar
                android:id="@+id/progressBar_service"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/custom_progressbar"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hygiene_textView"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ROOM HYGIENE"
                android:textSize="@dimen/smallFontL"
                android:textStyle="bold"/>
            <ProgressBar
                android:id="@+id/progressBar_hygiene"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/custom_progressbar"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/washroom_textView"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="WASHROOM"
                android:textSize="@dimen/smallFontL"
                android:textStyle="bold"/>
            <ProgressBar
                android:id="@+id/progressBar_washroom"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/custom_progressbar"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/staff_textView"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="STAFF"
                android:textSize="@dimen/smallFontL"
                android:textStyle="bold"/>
            <ProgressBar
                android:id="@+id/progressBar_staff"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/custom_progressbar"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>