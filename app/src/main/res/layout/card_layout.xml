<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginBottom="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        card_view:cardBackgroundColor="#f7f7f7"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="4dp"
        >


        <RelativeLayout
            android:id="@+id/imgBg_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/hotel_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hotel1" />

            <TextView
                android:id="@+id/premium_Textview"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/red_trans"
                android:text="Premium"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/largeFont"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/card_linearLayout"
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_marginTop="170dp"
                android:background="#80048982"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/price_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="7,025.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/smallFontL" />

                <TextView
                    android:id="@+id/save_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Save Rs2000.00(25%)"
                    android:textColor="@color/red_trans"
                    android:textSize="@dimen/extraSmallFont" />

                <TextView
                    android:id="@+id/cost_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Rs5,025.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/mediumFontL" />
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="255dp">

            <TextView
                android:id="@+id/hotel_textView"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="@string/hotel_Name"
                android:textColor="#048982"
                android:textSize="@dimen/largeFont"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/fav_imageBtn"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/heart"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/hotel_textView"/>

            <ImageButton
                android:id="@+id/show_imageBtn"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/eye" />

        </RelativeLayout>

        <TextView
            android:id="@+id/address_textView"
            android:layout_width="300dp"
            android:layout_height="27dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="283dp"
            android:text="@string/hotel_address"
            android:textColor="#048982"
            android:textSize="@dimen/mediumFontL"
            android:textStyle="italic"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="318dp"
            android:background="#7ffaa2">

            <TextView
                android:id="@+id/rate_textView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#29a343"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="4.8"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/smallFontL" />

            <TextView
                android:id="@+id/rating_textView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2500 Rating"
                android:textAlignment="center"
                android:textColor="#29a343"
                android:textSize="@dimen/smallFontL"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/rating_imgbtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#7ffaa2"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/arrow" />

        </LinearLayout>

        <Button
            android:id="@+id/wish_butn"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="360dp"
            android:background="@color/yellow"
            android:layout_marginBottom="10dp"
            android:text="Book Again"
            android:textColor="@color/red"
          />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>