<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/home_firstImage"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/hotel4"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"/>
            <LinearLayout
                android:id="@+id/red_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_firstImage"
                android:background="@color/red_trans"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <TextView
                    android:id="@+id/greeting_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="italic" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/Location_Btn"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/button_bg_color"
                        android:scaleType="fitCenter"
                        android:src="@drawable/location" />
                    <SearchView
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/button_bg_color"
                        android:queryHint="Where you want to stay"></SearchView>
                    <Button
                        android:id="@+id/City_Btn"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_bg_color"
                        android:text="All Cities"
                        android:textColor="@color/red_trans">
                    </Button>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_bg_grey"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/SearchFor_sppiner"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/corner"
                        android:entries="@array/Search"></Spinner>
                    <Spinner
                        android:id="@+id/searchCity_spinner"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:entries="@array/city"></Spinner>
                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="match_parent"
                        android:paddingRight="10dp"
                        android:scaleType="fitXY"
                        card_view:srcCompat="?android:attr/actionModeWebSearchDrawable" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/textview_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/red_box"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="ONI STAYS SERVICES"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/servicesRecyclerView"
                android:layout_below="@+id/textview_services"
                android:scrollbars="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <View
                android:id="@+id/lineSeprator"
                android:layout_below="@+id/servicesRecyclerView"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/dark_green" />
            <TextView
                android:id="@+id/textview_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineSeprator"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="Product Featured"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/product_RecyclerView"
                android:layout_below="@+id/textview_product"
                android:scrollbars="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <View
                android:id="@+id/lineSeprator2"
                android:layout_below="@+id/product_RecyclerView"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/dark_green" />
            <TextView
                android:id="@+id/textview_offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineSeprator2"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="OFFERS"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/offerRecyclerView"
                android:layout_below="@+id/textview_offers"
                android:scrollbars="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <View
                android:id="@+id/lineSeprator3"
                android:layout_below="@+id/offerRecyclerView"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/dark_green" />
            <TextView
                android:id="@+id/textview_deals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineSeprator3"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="DEALS FOR YOU"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/first_Deals"
                android:onClick="dealOnClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_deals"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/hotel1"
                    >
                    <LinearLayout
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#80048982">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Get 30% off\n on your first booking"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/get_started_bg"
                    >
                    <LinearLayout
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#80048982">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Get 30% off\n on your first booking"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:onClick="dealOnClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_Deals"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/hotel2"
                    >
                    <LinearLayout
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#80048982">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Get 30% off\n on your first booking"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@drawable/hotel3"
                    >
                    <LinearLayout
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#80048982">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Get 30% off\n on your first booking"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>